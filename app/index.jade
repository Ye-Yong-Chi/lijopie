doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title 台南市違規停車檢舉平台
    link(rel='stylesheet' href='app.css')
    link(rel='stylesheet' href='index.css')
  body
    .wrapper
      .ui.menu.fixed.inverted#header
        a.item(href='./')#title_logo
          img(src="res/title_logo.png")
        .right.menu
          a.item(href='about.html') 關於
          a.item(href='contact.html') 聯絡我們
        
      .ui.page.center.aligned.grid#cover
        .column#cover-section
          #title 台南市違規停車檢舉平台 
          #sub-title-1 哩足歹!立就拍!
          #sub-title-2 Report illegal parking right away!
          a.ui.button.teal.massive#report-btn 我要檢舉! GO!

      .ui.modal#login
        i.close.icon
        .header 登入
        .content
          .ui.segment.form
            .field
              label 帳號
              input(type='text' placeholder='帳號')
            .field
              label 密碼
              input(type='password' placeholder='密碼')
        .actions
          button.ui.button.blue.approve 登入
          button.ui.button.teal.deny 註冊

      .ui.modal#signup
        i.close.icon
        .header 註冊
        .content
          .ui.segment.form
            .field
              label 姓名
              input(type='text' placeholder='姓名')
            .field
              label 性別
              .ui.selection.dropdown#gender
                .default.text 性別
                i.dropdown.icon
                input(type="hidden" name="gender")
                .menu
                  .item 男
                  .item 女
                  .item 其他
            .field
              label 帳號
              input(type='text' placeholder='帳號')
            .field
              label 密碼
              input(type='password' placeholder='密碼')
            .field
              label 電子信箱
              input(type='email' placeholder='電子信箱')
        .actions
          button.ui.button.blue.deny 登入
          button.ui.button.teal.approve 註冊

      .ui.page.center.aligned.grid#latest-report
          h2.ui.header 最新檢舉
          .doubling.four.column.row#latest-report-content
       
      .ui.page.grid#about-us
        
    script(src="app.js")
    script(src="index.js")

